<section class="section">
  <% if (myBidang && myBidang.length > 0) { %>
  <div class="row">
    <% myBidang.forEach(bidang => { %>
    <div class="col-md-6 col-lg-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex align-items-center mb-3">
            <div class="avatar avatar-lg bg-primary me-3">
              <span class="avatar-content">
                <i class="bi bi-diagram-3-fill"></i>
              </span>
            </div>
            <div>
              <h5 class="card-title mb-0"><%= bidang.nama_bidang %></h5>
              <small class="text-muted">
                <i class="bi bi-person-badge"></i> 
                <%= bidang.ketua_name || 'Belum ada ketua' %>
              </small>
              <% if (bidang.posisi) { %>
              <br>
              <span class="badge <%= bidang.posisi === 'Ketua Bidang' ? 'bg-warning' : 'bg-info' %>">
                <%= bidang.posisi %>
              </span>
              <% } %>
            </div>
          </div>
          
          <p class="card-text text-muted">
            <%= bidang.deskripsi ? (bidang.deskripsi.length > 100 ? bidang.deskripsi.substring(0, 100) + '...' : bidang.deskripsi) : 'Tidak ada deskripsi' %>
          </p>
          
          <% if (bidang.posisi === 'Ketua Bidang') { %>
          <a href="/my-bidang/<%= bidang.id %>" class="btn btn-warning btn-block w-100">
            <i class="bi bi-people"></i> Kelola Anggota
          </a>
          <% } else { %>
          <a href="/my-bidang/<%= bidang.id %>" class="btn btn-primary btn-block w-100">
            <i class="bi bi-eye"></i> Lihat Detail
          </a>
          <% } %>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
  <% } else { %>
  <div class="card">
    <div class="card-body text-center py-5">
      <i class="bi bi-inbox" style="font-size: 5rem; color: #ddd;"></i>
      <h4 class="mt-3">Belum Terdaftar di Bidang Mana Pun</h4>
      <p class="text-muted">Anda belum terdaftar sebagai anggota di bidang mana pun. Hubungi Ketua Bidang atau Admin untuk mendaftar.</p>
    </div>
  </div>
  <% } %>
</section>