<div class="row mt-3">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h4>Daftar Anggota</h4>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>Nama</th>
                <th>Username</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% anggotaList.forEach(anggota => { %>
                <tr>
                  <td><%= anggota.full_name %></td>
                  <td>@<%= anggota.username %></td>
                  <td>
                    <span class="badge bg-<%= anggota.is_active ? 'success' : 'secondary' %>">
                      <%= anggota.is_active ? 'Aktif' : 'Tidak Aktif' %>
                    </span>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>