<div id="sidebar" class="active">
  <div class="sidebar-wrapper active">
    <div class="sidebar-header">
      <div class="d-flex justify-content-between">
        <div class="logo">
          <a href="/dashboard"><img src="/dashboard-template/dist/assets/images/logo/logo.png" alt="Logo"></a>
        </div>
        <div class="toggler">
          <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
        </div>
      </div>
    </div>
    <div class="sidebar-menu">
      <ul class="menu">
        <li class="sidebar-title">Menu</li>

        <!-- Dashboard -->
        <li class="sidebar-item <%= typeof activeMenu !== 'undefined' && activeMenu === 'dashboard' ? 'active' : '' %>">
          <a href="/dashboard" class='sidebar-link'>
            <i class="bi bi-grid-fill"></i>
            <span>Dashboard</span>
          </a>
        </li>

        <!-- Admin Only: Manajemen User -->
        <% if (user && user.roleLevel === 1) { %>
        <li class="sidebar-item <%= typeof activeMenu !== 'undefined' && activeMenu === 'users' ? 'active' : '' %>">
          <a href="/users" class='sidebar-link'>
            <i class="bi bi-people-fill"></i>
            <span>Manajemen User</span>
          </a>
        </li>
        <% } %>

        <!-- Admin, Ketua Umum, Ketua Bidang: Manajemen Bidang -->
        <% if (user && (user.roleLevel === 1 || user.roleLevel === 2 || user.roleLevel === 4)) { %>
        <li class="sidebar-item <%= typeof activeMenu !== 'undefined' && activeMenu === 'bidang' ? 'active' : '' %>">
          <a href="/bidang" class='sidebar-link'>
            <i class="bi bi-diagram-3-fill"></i>
            <span>Manajemen Bidang</span>
          </a>
        </li>
        <% } %>

        <!-- Ketua Bidang dan Anggota: Bidang Saya -->
        <% if (user && user.roleLevel >= 4) { %>
        <li class="sidebar-item <%= typeof activeMenu !== 'undefined' && activeMenu === 'bidang-saya' ? 'active' : '' %>">
          <a href="/my-bidang" class='sidebar-link'>
            <i class="bi bi-bookmark-fill"></i>
            <span>Bidang Saya</span>
          </a>
        </li>
        <% } %>

        <!-- Pengurus: Laporan -->
        <% if (user && user.roleLevel <= 3) { %>
        <li class="sidebar-item has-sub">
          <a href="#" class='sidebar-link'>
            <i class="bi bi-file-earmark-text-fill"></i>
            <span>Laporan</span>
          </a>
          <ul class="submenu">
            <li class="submenu-item">
              <a href="/laporan/keuangan">Laporan Keuangan</a>
            </li>
            <li class="submenu-item">
              <a href="/laporan/kegiatan">Laporan Kegiatan</a>
            </li>
          </ul>
        </li>
        <% } %>

        <!-- Profil Saya -->
        <li class="sidebar-item">
          <a href="/profile" class='sidebar-link'>
            <i class="bi bi-person-fill"></i>
            <span>Profil Saya</span>
          </a>
        </li>

        <!-- Logout -->
        <li class="sidebar-item">
          <a href="/logout" class='sidebar-link'>
            <i class="bi bi-box-arrow-right"></i>
            <span>Logout</span>
          </a>
        </li>
      </ul>
    </div>
    <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
  </div>
</div>