<section class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <h4 class="card-title">Daftar User</h4>
          <a href="/users/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tambah User
          </a>
        </div>
      </div>
      <div class="card-body">
        <!-- Alert Messages -->
        <% if (typeof query !== 'undefined' && query.success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <i class="bi bi-check-circle"></i> <%= query.success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <% if (typeof query !== 'undefined' && query.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="bi bi-exclamation-triangle"></i> <%= query.error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <!-- Search Box -->
        <div class="row mb-3">
          <div class="col-md-6">
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-search"></i></span>
              <input type="text" class="form-control" id="searchInput" placeholder="Cari user...">
            </div>
          </div>
          <div class="col-md-6 text-end">
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-outline-primary" onclick="filterByRole('all')">Semua</button>
              <button type="button" class="btn btn-outline-primary" onclick="filterByRole('1')">Admin</button>
              <button type="button" class="btn btn-outline-primary" onclick="filterByRole('2')">Ketua</button>
              <button type="button" class="btn btn-outline-primary" onclick="filterByRole('5')">Anggota</button>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-hover" id="userTable">
            <thead>
              <tr>
                <th>No</th>
                <th>Username</th>
                <th>Nama Lengkap</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length > 0) { %>
              <% users.forEach((user, index) => { %>
              <tr data-role="<%= user.role_level %>">
                <td><%= index + 1 %></td>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="avatar avatar-md me-2">
                      <% if (user.profile_photo) { %>
                      <img src="<%= user.profile_photo %>" alt="Avatar">
                      <% } else { %>
                      <img src="/dashboard-template/dist/assets/images/faces/1.jpg" alt="Avatar">
                      <% } %>
                    </div>
                    <strong><%= user.username %></strong>
                  </div>
                </td>
                <td><%= user.full_name %></td>
                <td><%= user.email %></td>
                <td>
                  <% 
                      let badgeClass = 'bg-secondary';
                      if (user.role_level === 1) badgeClass = 'bg-danger';
                      else if (user.role_level === 2) badgeClass = 'bg-primary';
                      else if (user.role_level === 3) badgeClass = 'bg-info';
                      else if (user.role_level === 4) badgeClass = 'bg-warning';
                      else if (user.role_level === 5) badgeClass = 'bg-success';
                    %>
                  <span class="badge <%= badgeClass %>"><%= user.role_name %></span>
                </td>
                <td>
                  <% if (user.is_active) { %>
                  <span class="badge bg-success">Aktif</span>
                  <% } else { %>
                  <span class="badge bg-secondary">Tidak Aktif</span>
                  <% } %>
                </td>
                <td>
                  <div class="btn-group" role="group">
                    <a href="/users/<%= user.id %>" class="btn btn-sm btn-info" title="Detail">
                      <i class="bi bi-eye"></i>
                    </a>
                    <a href="/users/edit/<%= user.id %>" class="btn btn-sm btn-warning" title="Edit">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <% if (users[index].id !== user.userId) { %>
                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(<%= users[index].id %>, '<%= users[index].username %>')" title="Hapus">
                      <i class="bi bi-trash"></i>
                    </button>
                    <% } %>
                  </div>
                </td>
              </tr>
              <% }) %>
              <% } else { %>
              <tr>
                <td colspan="7" class="text-center">Tidak ada data user</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Konfirmasi Hapus</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <p>Apakah Anda yakin ingin menghapus user <strong id="deleteUsername"></strong>?</p>
        <p class="text-danger"><small>Data yang dihapus tidak dapat dikembalikan!</small></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
        <form id="deleteForm" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">Hapus</button>
        </form>
      </div>
    </div>
  </div>
</div>

