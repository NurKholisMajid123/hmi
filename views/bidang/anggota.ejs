<!-- Alert Messages -->
<% if (query.success) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <i class="bi bi-check-circle"></i> <%= query.success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>
<% if (query.error) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <i class="bi bi-exclamation-circle"></i> <%= query.error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% } %>

<section class="section">
  <!-- Info Bidang -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h4 class="mb-2"><i class="bi bi-diagram-3-fill text-primary"></i> <%= bidang.nama_bidang %></h4>
          <p class="text-muted mb-2"><%= bidang.deskripsi || 'Tidak ada deskripsi' %></p>
          <% if (bidang.ketua_name) { %>
          <p class="mb-0">
            <span class="badge bg-light-info">
              <i class="bi bi-person-badge"></i> Ketua: <%= bidang.ketua_name %>
            </span>
          </p>
          <% } %>
        </div>
        <div class="col-md-4 text-end">
          <a href="/bidang" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Kembali ke Daftar Bidang
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Form Tambah Anggota -->
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5 class="card-title mb-0"><i class="bi bi-plus-circle"></i> Tambah Anggota</h5>
        </div>
        <div class="card-body">
          <% if (availableUsers && availableUsers.length > 0) { %>
          <form action="/bidang/<%= bidang.id %>/anggota/add" method="POST">
            <div class="mb-3">
              <label for="user_id" class="form-label">Pilih Anggota</label>
              <select class="form-select" id="user_id" name="user_id" required>
                <option value="">-- Pilih Anggota --</option>
                <% availableUsers.forEach(user => { %>
                <option value="<%= user.id %>">
                  <%= user.full_name %> (<%= user.email %>)
                </option>
                <% }); %>
              </select>
              <small class="text-muted">User dengan role "Anggota" yang belum terdaftar di bidang ini</small>
            </div>
            <button type="submit" class="btn btn-primary w-100">
              <i class="bi bi-plus-lg"></i> Tambahkan
            </button>
          </form>
          <% } else { %>
          <div class="alert alert-light-warning mb-0">
            <i class="bi bi-info-circle"></i> Semua anggota sudah terdaftar di bidang ini.
          </div>
          <% } %>
        </div>
      </div>

      <!-- Info Card -->
      <div class="card bg-light-info">
        <div class="card-body">
          <h6 class="card-title"><i class="bi bi-info-circle"></i> Informasi</h6>
          <ul class="small mb-0">
            <li>Hanya user dengan role "Anggota" yang bisa ditambahkan</li>
            <li>Satu anggota bisa terdaftar di beberapa bidang</li>
            <% if (user.roleLevel === 4) { %>
            <li class="text-primary"><strong>Anda hanya bisa mengelola anggota di bidang ini</strong></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>

    <!-- Daftar Anggota -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">
            <i class="bi bi-people-fill"></i> Daftar Anggota
            <span class="badge bg-primary"><%= anggota.length %> orang</span>
          </h5>
        </div>
        <div class="card-body">
          <% if (anggota && anggota.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead>
                <tr>
                  <th>NO</th>
                  <th>NAMA</th>
                  <th>EMAIL</th>
                  <th>USERNAME</th>
                  <th>STATUS</th>
                  <th>AKSI</th>
                </tr>
              </thead>
              <tbody>
                <% anggota.forEach((member, index) => { %>
                <tr>
                  <td class="text-bold-500"><%= index + 1 %></td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="avatar avatar-sm bg-light-primary me-2">
                        <span class="avatar-content">
                          <%= member.full_name.charAt(0).toUpperCase() %>
                        </span>
                      </div>
                      <strong><%= member.full_name %></strong>
                    </div>
                  </td>
                  <td><%= member.email %></td>
                  <td><span class="badge bg-light-secondary">@<%= member.username %></span></td>
                  <td>
                    <% if (member.is_active) { %>
                    <span class="badge bg-success">
                      <i class="bi bi-check-circle"></i> Aktif
                    </span>
                    <% } else { %>
                    <span class="badge bg-secondary">
                      <i class="bi bi-x-circle"></i> Nonaktif
                    </span>
                    <% } %>
                  </td>
                  <td>
                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmRemove(<%= member.id %>, '<%= member.full_name %>')" title="Hapus dari bidang">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #ddd;"></i>
            <p class="text-muted mt-3">Belum ada anggota di bidang ini. Tambahkan anggota dari form sebelah kiri.</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Remove Confirmation Modal -->
<div class="modal fade text-left" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="removeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger">
        <h5 class="modal-title white" id="removeModalLabel">
          <i class="bi bi-exclamation-triangle"></i> Konfirmasi Hapus Anggota
        </h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <i data-feather="x"></i>
        </button>
      </div>
      <div class="modal-body">
        <p>Apakah Anda yakin ingin menghapus <strong id="removeName" class="text-danger"></strong> dari bidang ini?</p>
        <div class="alert alert-light-info color-info">
          <i class="bi bi-info-circle"></i> Anggota akan dihapus dari bidang, tapi data user tidak akan dihapus.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light-secondary" data-bs-dismiss="modal">
          <i class="bx bx-x d-block d-sm-none"></i>
          <span class="d-none d-sm-block">Batal</span>
        </button>
        <form id="removeForm" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger ml-1">
            <i class="bx bx-check d-block d-sm-none"></i>
            <span class="d-none d-sm-block">Hapus dari Bidang</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function confirmRemove(userId, userName) {
    document.getElementById('removeName').textContent = userName;
    document.getElementById('removeForm').action = '/bidang/<%= bidang.id %>/anggota/remove/' + userId;
    const removeModal = new bootstrap.Modal(document.getElementById('removeModal'));
    removeModal.show();
  }

  // Auto dismiss alerts
  setTimeout(function() {
    const alerts = document.querySelectorAll('.alert-dismissible');
    alerts.forEach(alert => {
      const bsAlert = new bootstrap.Alert(alert);
      bsAlert.close();
    });
  }, 5000);
</script>