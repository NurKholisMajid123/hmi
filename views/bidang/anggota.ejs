<!-- Alert Messages -->
<% if (query.success) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
  <i class="bi bi-check-circle"></i> <%= query.success %>
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>

<% if (query.error) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  <i class="bi bi-exclamation-triangle"></i> <%= query.error %>
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
</div>
<% } %>



<!-- Daftar Anggota Section -->
<section class="section">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h4 class="card-title mb-1">Daftar Anggota</h4>
              <small class="text-muted">
                <i class="bi bi-people"></i> Total: <%= anggota.length %> anggota
              </small>
            </div>

            <div class="d-flex gap-2">
              <a href="/bidang" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Kembali
              </a>

              <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAnggotaModal">
                <i class="bi bi-plus-circle"></i> Tambah Anggota
              </button>
            </div>
          </div>
        </div>


        <div class="card-content">
          <div class="card-body">
            <!-- Search Row -->
            <% if (anggota && anggota.length > 0) { %>
            <div class="row mb-3">
              <div class="col-md-6">
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-search"></i></span>
                  <input type="text" class="form-control" id="searchInput" placeholder="Cari nama atau email anggota...">
                </div>
              </div>
              <div class="col-md-6 text-end">
                <span class="text-muted">
                  Ditampilkan: <strong id="visibleCount"><%= anggota.length %></strong> anggota
                </span>
              </div>
            </div>
            <% } %>
          </div>

          <!-- Table -->
          <div class="table-responsive">
            <table class="table table-hover mb-0" id="anggotaTable">
              <thead>
                <tr>
                  <th>NO</th>
                  <th>NAMA</th>
                  <th>EMAIL</th>
                  <th>USERNAME</th>
                  <th>STATUS</th>
                  <th>AKSI</th>
                </tr>
              </thead>
              <tbody>
                <% if (anggota && anggota.length > 0) { %>
                <% anggota.forEach((member, index) => { %>
                <tr>
                  <td class="text-bold-500"><%= index + 1 %></td>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="avatar avatar-sm bg-light-primary me-2">
                        <span class="avatar-content">
                          <%= member.full_name.charAt(0).toUpperCase() %>
                        </span>
                      </div>
                      <strong><%= member.full_name %></strong>
                    </div>
                  </td>
                  <td><%= member.email %></td>
                  <td><span class="badge bg-light-secondary">@<%= member.username %></span></td>
                  <td>
                    <% if (member.is_active) { %>
                    <span class="badge bg-success">
                      <i class="bi bi-check-circle"></i> Aktif
                    </span>
                    <% } else { %>
                    <span class="badge bg-secondary">
                      <i class="bi bi-x-circle"></i> Nonaktif
                    </span>
                    <% } %>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <button type="button" class="btn btn-sm btn-danger" onclick="confirmRemove(<%= member.id %>, '<%= member.full_name %>')" title="Hapus dari bidang">
                        <i class="bi bi-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>
                <% }); %>
                <% } else { %>
                <tr>
                  <td colspan="6" class="text-center text-muted py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <p class="mt-2">Belum ada anggota di bidang ini.</p>
                    <button type="button" class="btn btn-sm btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#addAnggotaModal">
                      <i class="bi bi-plus-circle"></i> Tambah Anggota Pertama
                    </button>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Add Anggota Modal -->
<div class="modal fade" id="addAnggotaModal" tabindex="-1" aria-labelledby="addAnggotaModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addAnggotaModalLabel">
          <i class="bi bi-person-plus"></i> Tambah Anggota
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/bidang/<%= bidang.id %>/anggota/add" method="POST">
        <div class="modal-body">
          <% if (availableUsers && availableUsers.length > 0) { %>
          <div class="mb-3">
            <label for="user_id" class="form-label">Pilih Anggota <span class="text-danger">*</span></label>
            <select class="form-select" id="user_id" name="user_id" required>
              <option value="">-- Pilih Anggota --</option>
              <% availableUsers.forEach(user => { %>
              <option value="<%= user.id %>">
                <%= user.full_name %> (<%= user.email %>)
              </option>
              <% }); %>
            </select>
            <small class="text-muted">
              <i class="bi bi-info-circle"></i> Hanya user dengan role "Anggota" yang belum terdaftar di bidang/departemen lain
            </small>
          </div>

          <% if (user.roleLevel === 5) { %>
          <div class="alert alert-light-info">
            <i class="bi bi-shield-check"></i> <strong>Info:</strong> Anda hanya bisa mengelola anggota di bidang ini
          </div>
          <% } %>
          <% } else { %>
          <div class="alert alert-warning mb-0">
            <i class="bi bi-exclamation-triangle"></i>
            Tidak ada user tersedia. Semua user sudah terdaftar di bidang/departemen lain.
          </div>
          <% } %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bi bi-x-circle"></i> Batal
          </button>
          <% if (availableUsers && availableUsers.length > 0) { %>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> Tambah
          </button>
          <% } %>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Remove Confirmation Modal -->
<div class="modal fade text-left" id="removeModal" tabindex="-1" role="dialog" aria-labelledby="removeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger">
        <h5 class="modal-title white" id="removeModalLabel">
          <i class="bi bi-exclamation-triangle"></i> Konfirmasi Hapus
        </h5>
        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
          <i data-feather="x"></i>
        </button>
      </div>
      <div class="modal-body">
        <p>Apakah Anda yakin ingin menghapus <strong id="removeName" class="text-danger"></strong> dari bidang ini?</p>
        <div class="alert alert-light-warning color-warning">
          <i class="bi bi-info-circle"></i> Anggota akan dihapus dari bidang, tapi data user tidak akan dihapus.
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light-secondary" data-bs-dismiss="modal">
          <i class="bx bx-x d-block d-sm-none"></i>
          <span class="d-none d-sm-block">Batal</span>
        </button>
        <form id="removeForm" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger ml-1">
            <i class="bx bx-check d-block d-sm-none"></i>
            <span class="d-none d-sm-block">Hapus dari Bidang</span>
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  // Search functionality
  const searchInput = document.getElementById('searchInput');
  const anggotaTable = document.getElementById('anggotaTable');
  const visibleCount = document.getElementById('visibleCount');

  if (searchInput && anggotaTable) {
    searchInput.addEventListener('keyup', function() {
      const searchValue = this.value.toLowerCase();
      const rows = anggotaTable.querySelectorAll('tbody tr');
      let count = 0;

      rows.forEach(row => {
        // Skip empty state row
        if (row.children.length === 1 && row.children[0].colSpan > 1) {
          return;
        }

        const text = row.textContent.toLowerCase();
        const isVisible = text.includes(searchValue);
        row.style.display = isVisible ? '' : 'none';

        if (isVisible) count++;
      });

      if (visibleCount) {
        visibleCount.textContent = count;
      }
    });
  }

  // Confirm remove function
  function confirmRemove(userId, userName) {
    document.getElementById('removeName').textContent = userName;
    document.getElementById('removeForm').action = '/bidang/<%= bidang.id %>/anggota/remove/' + userId;
    const removeModal = new bootstrap.Modal(document.getElementById('removeModal'));
    removeModal.show();
  }

  // Auto dismiss alerts
  setTimeout(function() {
    const alerts = document.querySelectorAll('.alert-dismissible');
    alerts.forEach(alert => {
      const bsAlert = new bootstrap.Alert(alert);
      bsAlert.close();
    });
  }, 5000);
</script>

<style>
  .badge {
    font-size: 0.75rem;
    padding: 0.35em 0.65em;
  }

  .table td {
    vertical-align: middle;
  }

  .btn-group .btn {
    margin: 0 2px;
  }

  .avatar-content {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    font-weight: bold;
  }
</style>